@using System.Data;
@model System.Data.DataSet

@{
    ViewData["Title"] = "Podnesite zahtev";
}
@if (TempData["SuccessMessage"] != null)



{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)



{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Korisnik" asp-action="DodajZahtev" method="post">
    <button type="submit" class="btn btn-sm btn-success" name="action" value="dodaj">Podnesi zahtev</button>
</form>

<h1>Spisak prethodnih zahteva:</h1>

@if (Model != null && Model.Tables.Count > 0 && Model.Tables[0].Rows.Count > 0)



{
    <table class="table table-striped">
        <tr>
            <th>IDZahteva</th>
            <th>JMBG Korisnika</th>
            <th>Status</th>
        </tr>

        @foreach (DataRow row in Model.Tables[0].Rows)



        {
            <tr>
                <td>@row["IDZahteva"]</td>
                <td>@row["JMBGKorisnika"]</td>
                <td>@row["Status"]</td>
            </tr>
        }
    </table>
}



else



{
    <p>Nema prethodnih zahteva.</p>
}
