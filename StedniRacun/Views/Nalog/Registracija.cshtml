@model RegistracijaModel

@{
    ViewData["Title"] = "Registracija";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card">
    <h4 class="text-center mb-4">Registracija</h4>
    <form asp-action="Registracija" method="post" class="">
        <input type="hidden" name="TipKorisnika" value="fizicko lice">
        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Ime">Ime<span class="text-danger"> *</span></label>
                <input asp-for="Ime" class="form-control">
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Prezime">Prezime<span class="text-danger"> *</span></label>
                <input asp-for="Prezime" class="form-control">
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Email">E-mail adresa<span class="text-danger"> *</span></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Lozinka">Lozinka<span class="text-danger"> *</span></label>
                <input asp-for="Lozinka" type="password" class="form-control">
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="JMBG">JMBG<span class="text-danger"> *</span></label>
                <input asp-for="JMBG" class="form-control">
                <span asp-validation-for="JMBG" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Godine">Godine<span class="text-danger"> *</span></label>
                <input asp-for="Godine" class="form-control">
                <span asp-validation-for="Godine" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-sm btn-success">Registruj se</button>
    </form>
</div>
