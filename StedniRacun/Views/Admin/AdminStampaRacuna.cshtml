@using System.Data;
@model System.Data.DataSet

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="sr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Računi</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }

        h1, h2, h3, h4 {
            color: #1f497d;
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
            width: 80%;
        }

        table, th, td {
            border: 1px solid #1f497d;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        h4 {
            margin-top: 20px;
            color: #1f497d;
        }
    </style>
</head>
<body>
    <h1>REPUBLIKA SRBIJA</h1>
    <h2>BANKARSTVO</h2>
    <h3>ŠTEDNI RAČUN</h3>

    @if (Model != null && Model.Tables.Count > 0 && Model.Tables[0].Rows.Count > 0)

    {
        <table>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Broj računa</th>
                <th>Stanje</th>
            </tr>
            @foreach (DataRow row in Model.Tables[0].Rows)

            {
                <tr>                   
                    <td>@row["Ime"]</td>
                    <td>@row["Prezime"]</td>
                    <td>@row["BrojRacuna"]</td>
                    <td>@row["Stanje"]</td>
                </tr>
            }
        </table>
    }

    else

    {
        <p>Nema rezultata za štampu.</p>
    }

</body>
</html>

